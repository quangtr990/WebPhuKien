@page
@model WebPhuKien.Pages.addsanphamModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link rel="stylesheet" href="~/css/style.css"> <!-- Adjust the path to your CSS file -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <div class="header">
        <div class="container">
            <div class="navbar">
                <div class="logo">
                    <a href="/quanly"><img src="images/logo.png" width="125px" alt="RedStore Logo"></a>
                </div>
                <nav>
                    <ul id="MenuItems">
                        <li><a href="/quanly">Trang chủ</a></li>
                        <li><a href="/danhsachsanpham">Danh Sách Sản Phẩm</a></li>
                        <li><a href="/danhsachtaikhoan">Danh Sách Tài Khoản</a></li>
                        <li><a href="/danhsachkhachhang">Danh Sách Khách Hàng</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-2">
                <h1>Add New Product</h1>
                <form method="post">
                    <!-- Adjust the action and method according to your ASP.NET Core route -->
                    <div class="input-group">
                        <label>Product ID</label>
                        <input type="text" asp-for="Input.MaSP" required>
                    </div>
                    <div class="input-group">
                        <label for="TenSP">Ten San Pham</label>
                        <input type="text" asp-for="Input.TenSP" required>
                    </div>
                    <div class="input-group">
                        <label for="MaLoai">Ma Loai</label>
                        <select asp-for="Input.MaLoai" class="form-control" required>
                            <option value="">Select Category</option> <!-- Thêm option mặc định -->
                            @foreach (var item in Model.LoaiSanPhams)
                            {
                                <option value="@item.MaLoai">@item.MaLoai</option>
                            }
                        </select>
                        <span asp-validation-for="Input.MaLoai" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <label for="GiaBan">Gia Ban</label>
                        <input type="number" asp-for="Input.GiaBan" required>
                    </div>
                    <div class="input-group">
                        <label for="SoLuongTonKho">So Luong Ton Kho</label>
                        <input type="number" asp-for="Input.SoLuongTonKho" required>
                    </div>
                    <div class="input-group">
                        <label for="Color">Mau Sac</label>
                        <input type="text" asp-for="Input.Color" required>
                    </div>
                    <div class="input-group">
                        <label for="Size">Size</label>
                        <input type="text" asp-for="Input.Size" required>
                    </div>
                    <div class="input-group">
                        <label for="Gender">Gender</label>
                        <input type="text" asp-for="Input.Gender" required>
                    </div>
                    <div class="input-group">
                        <label for="HinhAnh">Image URL</label>
                        <input type="text" asp-for="Input.HinhAnh" required>
                    </div>
                    <button type="submit" class="btn">Add Product</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer code remains the same -->

    <script>
        var MenuItems = document.getElementById("MenuItems");

        MenuItems.style.maxHeight = "0px";

        function menutoggle() {
            if (MenuItems.style.maxHeight == "0px") {
                MenuItems.style.maxHeight = "200px";
            } else {
                MenuItems.style.maxHeight = "0px";
            }
        }
    </script>
</body>
</html>
